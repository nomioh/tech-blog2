<article>
  <form class="edit-post-form">
    <div>
      <h5 class="text-secondary font-weight-bold">
      Title
      </h5>   
    </div>
    <div>
    <input class="mb-3" name="post-title" type="text" value="{{post.title}}" />    
      <h5 class="text-secondary font-weight-bold">
        LINK
      </h5>
    <input class="textarea" name="post-content" type="text" value="{{post.post_content}}" />
    </div>
    <div>
      Shared on {{format_date post.createdAt}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

{{> comments comments=post.comments loggedIn=loggedIn}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/add-comment.js"></script>