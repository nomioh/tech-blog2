<form class="signup-form">
  <div class="mt-5">
    <h2>Sign Up</h2>
    <label class="mt-3" for="username-signup">username:</label>
    <input class="signup" type="text" id="username-signup" />
  </div>
  <div>
    <label for="email-signup">email:</label>
    <input class="signup" type="text" id="email-signup" />
  </div>
  <div>
    <label for="password-signup">password:</label>
    <input class="signup" type="password" id="password-signup" />
  </div>
  <div>
    <button type="submit" class="mr-2 ml-4">sign up</button>
    <a href="/login"><button type="button" class="bg-light text-dark">login instead</button></a>
  </div>
</form>

